<%= form_for(@user, :html => {:class => "form-horizontal"}) do |f| %>
    <% if @user.errors.any? %>
        <div id="error_explanation" class="form-group">
          <div class="col-sm-2"></div>
          <div class="col-sm-9">
            <h2>保存时发生了<%= pluralize(@user.errors.count, "error") %></h2>
            <ul>
              <% @user.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
    <% end %>

    <div class="form-group">
      <%= f.label :username, :class => "col-sm-2 control-label" do %>
          <%= t 'activerecord.attributes.user.username' %> <span class="symbol required"></span>
      <% end %>
      <div class="col-sm-9">
        <%= f.text_field :username, :class => "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :email, :class => "col-sm-2 control-label" do %>
          <%= t 'activerecord.attributes.user.email' %> <span class="symbol required"></span>
      <% end %>
      <div class="col-sm-9">
        <%= f.text_field :email, :class => "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :encrypted_password, :class => "col-sm-2 control-label" do %>
          <%= t 'activerecord.attributes.user.encrypted_password' %> <span class="symbol required"></span>
      <% end %>
      <div class="col-sm-9">
        <%= f.text_field :encrypted_password, :class => "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :reset_password_token, :class => "col-sm-2 control-label" do %>
          <%= t 'activerecord.attributes.user.reset_password_token' %> <span class="symbol required"></span>
      <% end %>
      <div class="col-sm-9">
        <%= f.text_field :reset_password_token, :class => "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :reset_password_sent_at, :class => "col-sm-2 control-label" do %>
          <%= t 'activerecord.attributes.user.reset_password_sent_at' %> <span class="symbol required"></span>
      <% end %>
      <div class="col-sm-9">
        <%= f.datetime_select :reset_password_sent_at, :class => "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :remember_created_at, :class => "col-sm-2 control-label" do %>
          <%= t 'activerecord.attributes.user.remember_created_at' %> <span class="symbol required"></span>
      <% end %>
      <div class="col-sm-9">
        <%= f.datetime_select :remember_created_at, :class => "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :sign_in_count, :class => "col-sm-2 control-label" do %>
          <%= t 'activerecord.attributes.user.sign_in_count' %> <span class="symbol required"></span>
      <% end %>
      <div class="col-sm-9">
        <%= f.number_field :sign_in_count, :class => "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :current_sign_in_at, :class => "col-sm-2 control-label" do %>
          <%= t 'activerecord.attributes.user.current_sign_in_at' %> <span class="symbol required"></span>
      <% end %>
      <div class="col-sm-9">
        <%= f.datetime_select :current_sign_in_at, :class => "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :last_sign_in_at, :class => "col-sm-2 control-label" do %>
          <%= t 'activerecord.attributes.user.last_sign_in_at' %> <span class="symbol required"></span>
      <% end %>
      <div class="col-sm-9">
        <%= f.datetime_select :last_sign_in_at, :class => "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :current_sign_in_ip, :class => "col-sm-2 control-label" do %>
          <%= t 'activerecord.attributes.user.current_sign_in_ip' %> <span class="symbol required"></span>
      <% end %>
      <div class="col-sm-9">
        <%= f.text_field :current_sign_in_ip, :class => "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :last_sign_in_ip, :class => "col-sm-2 control-label" do %>
          <%= t 'activerecord.attributes.user.last_sign_in_ip' %> <span class="symbol required"></span>
      <% end %>
      <div class="col-sm-9">
        <%= f.text_field :last_sign_in_ip, :class => "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :confirmation_token, :class => "col-sm-2 control-label" do %>
          <%= t 'activerecord.attributes.user.confirmation_token' %> <span class="symbol required"></span>
      <% end %>
      <div class="col-sm-9">
        <%= f.text_field :confirmation_token, :class => "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :confirmed_at, :class => "col-sm-2 control-label" do %>
          <%= t 'activerecord.attributes.user.confirmed_at' %> <span class="symbol required"></span>
      <% end %>
      <div class="col-sm-9">
        <%= f.datetime_select :confirmed_at, :class => "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :confirmation_sent_at, :class => "col-sm-2 control-label" do %>
          <%= t 'activerecord.attributes.user.confirmation_sent_at' %> <span class="symbol required"></span>
      <% end %>
      <div class="col-sm-9">
        <%= f.datetime_select :confirmation_sent_at, :class => "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :unconfirmed_email, :class => "col-sm-2 control-label" do %>
          <%= t 'activerecord.attributes.user.unconfirmed_email' %> <span class="symbol required"></span>
      <% end %>
      <div class="col-sm-9">
        <%= f.text_field :unconfirmed_email, :class => "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <label class="col-sm-2 control-label" for="submit"></label>

      <div class="col-sm-9">
        <%= f.submit("提交", class: "btn btn-yellow btn-block") %>
      </div>
    </div>
<% end %>
